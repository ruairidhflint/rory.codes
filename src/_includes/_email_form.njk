      <div style="display: flex; margin-bottom: 1em;">
        <input 
          type="email" 
          id="emailInput" 
          name="email" 
          placeholder="Your email address" 
          required
          style="flex: 1; padding: 0.6em; font-size: 1em; border: 1px solid var(--lightgray); background: var(--background); color: var(--main-text);"
        >
        <button 
          type="submit" 
          style="margin-left: 0.5em; padding: 0.6em 1em; background: var(--link); color: white; border: none; cursor: pointer; font-size: 1em; border-radius: 4px;"
        >
          Subscribe
        </button>
      </div>
    </form>
  </div>
  
  <div id="successMessage" style="display: none;">
    <p style="font-weight: bold; color: var(--link);">Thank you! You should receive a confirmation email shortly.</p>
  </div>
</div>

